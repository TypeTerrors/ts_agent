# Trainer config
TICKET=BTC-USDT
TRADE_HISTORY_LIMIT=7500
BAR_INTERVAL_MINUTES=0.5
FEATURE_WINDOW_SIZE=48
TRAINING_EPOCHS=20
TRAINING_BATCH_SIZE=64
TRAINING_VAL_SPLIT=0.1
RUN_INTERVAL_MINUTES=5
TCN_FILTERS=64,128,128
TCN_KERNEL=5
TCN_DROPOUT=0.2
RISK_NEUTRAL_ZONE=0.05
RISK_VOL_TARGET=0.015
MODEL_STORE_PATH=/data/models
LOG_FILE=/data/logs/trading.log

# Postgres (consider managed password secrets)
PG_HOST=postgres
PG_PORT=5432
PG_USER=trader
PG_PASSWORD=change-me
PG_DATABASE=trading
PG_SSL=true
PG_SSLMODE=require
PG_PORT_EXPOSE=0

# Websocket API (exposed via Cloudflare tunnel ws.example.com)
API_PORT=8080
API_PORT_EXPOSE=0

# Dashboard (served via Cloudflare tunnel app.example.com)
DASHBOARD_PORT_EXPOSE=0
VITE_WS_URL=wss://ws.example.com/ws

# Tunnels
TUNNEL_DASHBOARD=<tunnel-token-here>
TUNNEL_SOCKET=<tunnel-token-here>